<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAQ Admin Panel</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script>
        async function deleteFAQ(id) {
            const response = await fetch(`/api/faqs/${id}`, { method: 'DELETE' });
            if (response.ok) location.reload();
        }
    </script>
</head>
<body>
    <h1>FAQ Admin Panel</h1>
    <form action="/api/faqs" method="POST">
        <input type="text" name="question" placeholder="Enter question" required>
        <textarea name="answer" placeholder="Enter answer" required></textarea>
        <button type="submit">Add FAQ</button>
    </form>

    <h2>FAQs</h2>
    <ul>
        <% faqs.forEach(faq => { %>
            <li>
                <strong><%= faq.question %></strong> - <%= faq.answer %>
                <button onclick="deleteFAQ('<%= faq._id %>')">Delete</button>
            </li>
        <% }) %>
    </ul>
</body>
</html>
